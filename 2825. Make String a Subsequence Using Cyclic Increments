class Solution {
public:
    bool canMakeSubsequence(string str1, string str2) {
        int m=str1.length();
        int n=str2.length();
        int i=0,j=0;

        while(i<m and j<n){
            if(str1[i]==str2[j] or str1[i]+1==str2[j] or str1[i]-25==str2[j])
                j++;
            i++;
        }
        return j==n;
    }
};
